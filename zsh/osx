#
# .zshrc for OSX
#

# Use zsh 5.0 (by brew)
alias zsh='/usr/local/bin/zsh'

# Aliases
alias ll='ls -ltr'

# Environments
# Add Homebrew Path to PATH
export PATH=/usr/local/bin:/usr/local/sbin:$PATH

# rbenv
export PATH="$HOME/.rbenv/bin:$PATH
~/.rbenv/bin/rbenv init

# NVM
. ~/.nvm/nvm.sh

# Heroku Toolbelt
export PATH="/usr/local/heroku/bin:$PATH"
